{
	"name": "glaze",
	"version": "0.0.1",
	"description": "all-in-one solution for building web apps",
	"license": "MIT",
	"scripts": {
		"dev": "dotenvx run -- turbo run dev",
		"format": "pnpm biome format .",
		"format:fix": "pnpm biome format --write .",
		"lint": "pnpm biome lint .",
		"lint:fix": "pnpm biome lint --write --unsafe .",
		"check": "pnpm biome check .",
		"check:fix": "pnpm biome check --write --unsafe .",
		"drizzle:generate": "dotenvx run -- turbo run drizzle:generate --filter=@glaze/database",
		"drizzle:migrate": "dotenvx run -- turbo run drizzle:migrate --filter=@glaze/database"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@dotenvx/dotenvx": "^1.21.1",
		"turbo": "^2.2.3"
	},
	"packageManager": "pnpm@9.4.0",
	"engines": {
		"node": ">=20.0.0"
	},
	"dependencies": {}
}
